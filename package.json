{
  "name": "linkedin-zoomer",
  "displayName": "LinkedIn Zoomer",
  "version": "0.0.1",
  "description": "An extension to zoom in all profile images on LinkedIn. Tastefully, of course.",
  "author": "Adam McQuilkin",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.88.0",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "scripting",
      "tabs",
      "activeTab",
      "sidePanel"
    ]
  }
}